{
  "name": "@hyprnz/es-domain",
  "version": "0.0.17",
  "type": "commonjs",
  "author": {
    "name": "HYPR"
  },
  "licenses": [
    {
      "type": "MIT"
    }
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "description": "A library for handling event sourced domain models",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc -p ./tsconfig.json",
    "clean": "rm -fr dist/** && rimraf build/** ",
    "clean:build": "npm run clean && npm run build",
    "test:micro": "jest --testPathPattern=\\.micro\\.test\\.ts$",
    "test:integration": "jest --testPathPattern=\\.integration\\.test\\.ts$",
    "test:ci": "npm run test:micro --  --ci --watchAll=false --reporters=default --reporters=jest-junit"
  },
  "peerDependencies": {
    "@azure/cosmos": "^3.14",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3"
  },
  "devDependencies": {
    "@azure/cosmos": "^3.14.1",
    "@types/jest": "~27.4.1",
    "@types/node": "~17.0.22",
    "@types/uuid": "~8.3.1",
    "husky": "^7.0.4",
    "jest": "~27.5.1",
    "jest-junit": "~13.0.0",
    "mismatched": "~2.10.1",
    "prettier": "^2.6.0",
    "pretty-quick": "~3.1.3",
    "reflect-metadata": "^0.1.13",
    "thespian": "~2.10.1",
    "ts-jest": "~27.1.3",
    "ts-node": "~10.7.0",
    "typescript": "~4.6.2",
    "uuid": "~8.3.2"
  }
}
